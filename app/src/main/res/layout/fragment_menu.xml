<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/font_textview"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mnu_iv_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/hamburger"
            android:scaleType="fitCenter">

        </ImageView>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/logo"
            android:scaleType="fitCenter">

        </ImageView>
        <ImageView
            android:id="@+id/mnu_iv_loc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/location_pin"
            android:scaleType="fitCenter">

        </ImageView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"></View>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_margin="@dimen/font_textview"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>
            <LinearLayout
                android:id="@+id/mnu_ll_login"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/mnu_ll_fb"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_title"
                        android:gravity="left|center_vertical"
                        android:text="@string/fb">
                    </TextView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="@dimen/font_title"
                        android:gravity="right|center_vertical"
                        android:text="@string/login">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mnu_ll_tw"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_title"
                        android:gravity="left|center_vertical"
                        android:text="@string/tw">
                    </TextView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="@dimen/font_title"
                        android:gravity="right|center_vertical"
                        android:text="@string/login">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mnu_ll_signin"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_title"
                        android:gravity="left|center_vertical"
                        android:text="@string/account">
                    </TextView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="@dimen/font_title"
                        android:gravity="right|center_vertical"
                        android:text="@string/login">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mnu_ll_ca"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_title"
                        android:gravity="left|center_vertical"
                        android:text="@string/account">
                    </TextView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="@dimen/font_title"
                        android:gravity="right|center_vertical"
                        android:text="@string/create">
                    </TextView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mnu_ll_signout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_title"
                        android:gravity="left|center_vertical"
                        android:text="@string/your_account">
                    </TextView>
                    <TextView
                        android:id="@+id/mnu_txt_ya_view"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="@dimen/font_title"
                        android:gravity="left|center_vertical"
                        android:text="@string/view">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp">

                    <TextView
                        android:id="@+id/mnu_txt_not"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_title"
                        android:gravity="left|center_vertical"
                        android:text="@string/not">
                    </TextView>
                    <TextView
                        android:id="@+id/mnu_txt_so"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="@dimen/font_title"
                        android:gravity="left|center_vertical"
                        android:text="@string/signout">
                    </TextView>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_title"
                android:gravity="left|center_vertical"
                android:text="@string/mnu_cc">
            </TextView>

            <LinearLayout
                android:id="@+id/mnu_ll_fq"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:src="@drawable/account_question">

                </ImageView>

                <TextView
                    android:id="@+id/mnu_txt_fq"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="@dimen/font_title"
                    android:gravity="left|center_vertical"
                    android:text="@string/mnu_fq">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mnu_ll_admin_email"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:src="@drawable/account_mail">

                </ImageView>

                <TextView
                    android:id="@+id/mnu_email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="@dimen/font_title"
                    android:gravity="left|center_vertical"
                    android:text="@string/mnu_wc">
                </TextView>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </ImageView>
            <LinearLayout
                android:id="@+id/mnu_ll_cweb"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:src="@drawable/account_web">

                </ImageView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="@dimen/font_title"
                    android:gravity="left|center_vertical"
                    android:text="@string/mnu_cw">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mnu_ll_cblog"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:src="@drawable/account_rss">

                </ImageView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="@dimen/font_title"
                    android:gravity="left|center_vertical"
                    android:text="@string/mnu_cb_">
                </TextView>
            </LinearLayout>

        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

        </Space>

    </LinearLayout>


</LinearLayout>
