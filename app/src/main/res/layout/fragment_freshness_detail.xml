<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/frd_iv_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/font_textview"
            android:src="@drawable/back_arrow"
            android:scaleType="fitCenter">

        </ImageView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:layout_margin="2dp"
            android:gravity="center"
            android:src="@drawable/freshness_title"
            android:scaleType="fitCenter">

        </ImageView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

        </TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="@dimen/font_textview"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0">

    </ScrollView>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/frd_txt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AVOCATOS"
                        android:gravity="left"
                        android:paddingLeft="@dimen/font_textview"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_medium"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:layout_height="0dp"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/fr_txt_"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:src="@drawable/thermometer"
                            android:scaleType="fitCenter"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="match_parent"
                            android:gravity="left"
                            android:paddingLeft="@dimen/font_textview"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/frs_txt_it"
                                android:textSize="@dimen/font_textview"
                                android:gravity="left|bottom"
                                android:textColor="@android:color/holo_red_light"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed"/>

                            <TextView
                                android:id="@+id/frd_txt_temp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/frs_txt_degree"
                                android:textSize="@dimen/font_textview1"
                                android:gravity="left"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/frs_txt_rh"
                                android:textSize="@dimen/font_textview"
                                android:gravity="left|bottom"
                                android:textColor="@android:color/holo_red_light"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed"/>

                            <TextView
                                android:id="@+id/frd_txt_humi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="35 - 45%"
                                android:textSize="@dimen/font_textview1"
                                android:gravity="left"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"/>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:id="@+id/frd_iv_pi"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:src="@drawable/fresh_fv_apple"
                    android:layout_marginRight="@dimen/font_textview"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/font_textview2"
                android:background="@drawable/seperator_1" />

            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/frs_txt_ssc"
                    android:textSize="@dimen/font_textview1"
                    android:gravity="center"
                    android:textColor="@android:color/holo_red_light"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginBottom="@dimen/font_textview"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="0dp">

                    <ImageView
                        android:id="@+id/frd_iv_ssci"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:padding="@dimen/font_textview">

                    </ImageView>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginRight="@dimen/font_textview">

                        <TextView
                            android:id="@+id/frd_txt_prdsubject"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/frs_txt_sr"
                            android:textSize="@dimen/font_textview2"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="sans-serif-condensed"/>

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:layout_marginBottom="@dimen/font_textview">

                            <TextView
                                android:id="@+id/frd_txt_ctd"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:text="@string/frs_txt_sr"
                                android:textSize="@dimen/font_textview"
                                android:gravity="left"
                                android:textColor="@color/black"/>

                        </ScrollView>

                        <TextView
                            android:id="@+id/frd_txt_seemore"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_red"
                            android:text="@string/frs_txt_sm"
                            android:textSize="@dimen/font_textview2"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/font_textview2"
                    android:layout_marginBottom="@dimen/font_textview"
                    android:background="@drawable/seperator_1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/font_textview"
                    android:text="@string/frs_txt_st"
                    android:textSize="@dimen/font_textview1"
                    android:gravity="center"
                    android:textColor="@android:color/holo_red_light"
                    android:fontFamily="sans-serif-condensed"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/font_textview"
                    android:layout_marginRight="@dimen/font_textview">

                    <TextView
                        android:id="@+id/frd_txt_tips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/frs_txt_safovb"
                        android:textSize="@dimen/font_textview2"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-condensed"/>

                </ScrollView>

            </LinearLayout>




        </LinearLayout>

    </LinearLayout>


</LinearLayout>
