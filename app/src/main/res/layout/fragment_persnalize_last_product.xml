<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/pslp_iv_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/back_arrow">

            </ImageView>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

            </View>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="8"
                android:src="@drawable/ps_title">

            </ImageView>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:scaleType="fitCenter">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.6"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/ff_ll_thumbler"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/pstgp_txt_category"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:text="@string/ps_txt_yct"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_title" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/ps_title_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="12"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/pslp_ll_prdinfo"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/pslp_iv_prd"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ps_round_tray"/>

                        <LinearLayout
                            android:id="@+id/pstpd_ll_dimen"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/font_textview"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/pslp_txt_prdname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/ps_txt_syd"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:fontFamily="sans-serif-condensed"
                                android:textSize="@dimen/font_title"
                                android:layout_marginBottom="@dimen/font_textview"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"/>

                                <ImageView
                                    android:id="@+id/pslp_iv_fb_share"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:src="@drawable/social_icon_facebook"/>

                                <ImageView
                                    android:id="@+id/pslp_iv_email_blue"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:src="@drawable/email_blue"/>

                                <ImageView
                                    android:id="@+id/pslp_iv_download"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:src="@drawable/download"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"/>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pslp_ll_userinfo"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="8"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/font_textview"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="@dimen/font_textview"
                            android:text="@string/ca_fn"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="@dimen/font_textview1" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray" />

                        <EditText
                            android:id="@+id/pslp_edt_firstname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="left|center_vertical"
                            android:hint="@string/ps_edt_efn"
                            android:textColor="@android:color/black"
                            android:paddingLeft="@dimen/font_textview"
                            android:textSize="@dimen/font_title"
                            android:imeOptions="actionNext"
                            android:inputType="text"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/font_textview"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="@dimen/font_textview"
                            android:text="@string/ca_ln"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="@dimen/font_textview1" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray" />

                        <EditText
                            android:id="@+id/pslp_edt_lastname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="left|center_vertical"
                            android:hint="@string/ps_edt_eln"
                            android:textColor="@android:color/black"
                            android:paddingLeft="@dimen/font_textview"
                            android:textSize="@dimen/font_title"
                            android:imeOptions="actionNext"
                            android:inputType="text"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/font_textview"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="@dimen/font_textview"
                            android:text="@string/si_email"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="@dimen/font_textview1" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray" />

                        <EditText
                            android:id="@+id/pslp_edt_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="left|center_vertical"
                            android:hint="@string/ps_edt_tye"
                            android:textColor="@android:color/black"
                            android:paddingLeft="@dimen/font_textview"
                            android:textSize="@dimen/font_title"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/font_textview"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="@dimen/font_textview"
                            android:text="@string/ps_tray_count"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="@dimen/font_textview1" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray" />

                        <EditText
                            android:id="@+id/pslp_edt_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="left|center_vertical"
                            android:hint="@string/ps_edt_ttc"
                            android:textColor="@android:color/black"
                            android:paddingLeft="@dimen/font_textview"
                            android:textSize="@dimen/font_title"
                            android:imeOptions="actionDone"
                            android:inputType="numberDecimal"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/pslp_txt_gp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/ps_get_pricing"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_title"
                        android:fontFamily="sans-serif-condensed"
                        android:textStyle="bold"
                        android:background="@drawable/ps_red_button">

                    </TextView>


                </LinearLayout>



            </LinearLayout>

        </LinearLayout>



</LinearLayout>
