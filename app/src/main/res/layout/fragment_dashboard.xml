<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/font_textview"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/db_iv_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/font_textview"
            android:src="@drawable/hamburger"
            android:scaleType="fitCenter">

        </ImageView>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/logo"
            android:scaleType="fitCenter">

        </ImageView>
        <ImageView
            android:id="@+id/db_iv_loc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/location_pin"
            android:scaleType="fitCenter">

        </ImageView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@drawable/home_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/db_ll_blog"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="2dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="7dp"
                android:src="@drawable/blog_post"
                android:scaleType="fitCenter">

            </ImageView>
            <ImageView
                android:id="@+id/db_iv_bImg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_margin="2dp"
                android:src="@drawable/trans"
                android:scaleType="fitXY">

            </ImageView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:layout_marginLeft="@dimen/font_textview"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/db_txt_btitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/blog_temp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_textview"
                    android:gravity="left|center_vertical"
                    android:fontFamily="sans-serif-condensed">

                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/db_txt_bdate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Augest 21, 2015"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_textview"
                        android:gravity="left|center_vertical"
                        android:fontFamily="sans-serif-condensed"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/go_to_blog"
                        android:textColor="@android:color/white"
                        android:paddingRight="@dimen/font_textview"
                        android:textSize="@dimen/font_textview"
                        android:gravity="right|center_vertical"
                        android:fontFamily="sans-serif-condensed"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_20sdp">

                </android.support.v4.view.ViewPager>
                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="bottom"/>

            </FrameLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
