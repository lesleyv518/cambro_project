<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.6"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:src="@drawable/tp_bk_home1">

                </ImageView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>
                <LinearLayout
                    android:id="@+id/tp_ll_foodpan"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:padding="@dimen/font_textview"
                            android:src="@drawable/tp_food_pan"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:paddingTop="3dp"
                            android:paddingLeft="@dimen/font_textview"
                            android:text="@string/tp_txt_food"
                            android:gravity="left|center"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="@dimen/_20sdp"
                            android:fontFamily="sans-serif-condensed"
                            android:textStyle="bold|italic"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/tp_arrow_right"
                        android:padding="@dimen/activity_horizontal_margin"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:id="@+id/tp_ll_beverages"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:padding="@dimen/font_textview"
                            android:src="@drawable/tp_beverage1"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:paddingTop="3dp"
                            android:paddingLeft="@dimen/font_textview"
                            android:text="@string/tp_txt_beverage"
                            android:gravity="left|center"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="@dimen/_20sdp"
                            android:fontFamily="sans-serif-condensed"
                            android:textStyle="bold|italic"/>

                    </LinearLayout>


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/tp_arrow_right"
                        android:padding="@dimen/activity_horizontal_margin"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
