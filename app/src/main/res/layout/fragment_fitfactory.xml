<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ff_iv_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/back_arrow"
            android:scaleType="fitCenter">

        </ImageView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:layout_margin="2dp"
            android:text="@string/ff_txt_title"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/font_title"
            android:fontFamily="sans-serif-condensed">

        </TextView>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="7dp"
            android:scaleType="fitCenter">

        </ImageView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.6"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ff_ll_thumbler"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@color/color_bk_thumbler">

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingTop="3dp"
                            android:paddingLeft="@dimen/font_textview"
                            android:text="@string/ff_txt_thumbler"
                            android:gravity="left|center"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_title"
                            android:fontFamily="sans-serif-condensed"
                            android:textStyle="bold"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:padding="@dimen/font_textview1"
                            android:src="@drawable/tumbler_icon"/>
                    </LinearLayout>


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/black_arrow"
                        android:padding="@dimen/activity_horizontal_margin"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ff_ll_pan"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/color_bk_pans"
                    android:layout_weight="2">

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingTop="3dp"
                            android:paddingLeft="@dimen/font_textview"
                            android:text="@string/ff_txt_pans"
                            android:gravity="left|center"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/font_title"
                            android:fontFamily="sans-serif-condensed"
                            android:textStyle="bold"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:padding="@dimen/font_textview1"
                            android:src="@drawable/pan_icon"/>
                    </LinearLayout>


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/white_arrow"
                        android:padding="@dimen/activity_horizontal_margin"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ff_ll_storage"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/color_bk_storage"
                    android:layout_weight="2">

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingTop="3dp"
                            android:paddingLeft="@dimen/font_textview"
                            android:text="@string/ff_txt_storage"
                            android:gravity="left|center"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_title"
                            android:fontFamily="sans-serif-condensed"
                            android:textStyle="bold"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:padding="@dimen/font_textview"
                            android:src="@drawable/storage_icon"/>
                    </LinearLayout>


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/black_arrow"
                        android:padding="@dimen/activity_horizontal_margin"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ff_ll_healthcare"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/color_bk_healthcare"
                    android:layout_weight="2">

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingTop="3dp"
                            android:paddingLeft="@dimen/font_textview"
                            android:text="@string/ff_txt_healthcare"
                            android:gravity="left|center"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/font_title"
                            android:fontFamily="sans-serif-condensed"
                            android:textStyle="bold"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:padding="@dimen/font_textview"
                            android:src="@drawable/healthcare_icon"/>
                    </LinearLayout>


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/white_arrow"
                        android:padding="@dimen/activity_horizontal_margin"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
