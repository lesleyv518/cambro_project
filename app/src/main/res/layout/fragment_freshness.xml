<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fr_iv_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/font_textview"
            android:src="@drawable/back_arrow"
            android:scaleType="fitCenter">

        </ImageView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:layout_margin="2dp"
            android:gravity="center"
            android:src="@drawable/freshness_title"
            android:scaleType="fitCenter">

        </ImageView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

        </TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"></View>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/font_textview"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/font_textview1"
                android:text="@string/frs_txt_sr"
                android:textSize="@dimen/font_textview2"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/frs_txt_safovb"
                android:textSize="@dimen/font_title"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginBottom="@dimen/font_textview"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/font_textview1"
                android:text="@string/frs_txt_fruits"
                android:textSize="@dimen/font_textview1"
                android:gravity="center"
                android:textColor="@android:color/holo_red_light"
                android:textStyle="bold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"/>

                <com.cambro.app.utils.wheel.WheelView
                    android:id="@+id/fr_whl_fruit"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:gravity="left"/>

                <ImageView
                    android:id="@+id/fr_txt_fdone"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:padding="@dimen/font_textview"
                    android:layout_height="match_parent"
                    android:src="@drawable/red_arrow"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/font_textview1"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/font_textview1"
                android:text="@string/frs_txt_veg"
                android:textSize="@dimen/font_textview1"
                android:gravity="center"
                android:textColor="@android:color/holo_red_light"
                android:textStyle="bold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"/>

                <!--ListView
                    android:id="@+id/fr_lst_veg"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="@dimen/font_textview1"
                    android:textColor="@android:color/holo_red_light"
                    android:text="@string/si_fp"
                    android:fontFamily="sans-serif"/-->

                <com.cambro.app.utils.wheel.WheelView
                    android:id="@+id/fr_whl_veg"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:gravity="left"/>

                <ImageView
                    android:id="@+id/fr_txt_vdone"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:padding="@dimen/font_textview"
                    android:layout_height="match_parent"
                    android:src="@drawable/red_arrow"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/font_textview1"
                android:background="@android:color/darker_gray" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
