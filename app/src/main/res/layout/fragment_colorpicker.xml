<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:picker="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/psc_iv_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/back_arrow">

        </ImageView>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

        </View>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="8"
            android:src="@drawable/ps_title">

        </ImageView>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:scaleType="fitCenter">

        </ImageView>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/ps_title_line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="@dimen/font_small">

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"  />

            <ImageView
                android:id="@+id/iv_sel_color"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"  />
        </LinearLayout>

        <com.github.danielnilsson9.colorpickerview.view.ColorPickerView
            android:id="@+id/colorpickerview__color_picker_view"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            picker:alphaChannelVisible="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@color/black">

        </View>

        <TextView
            android:id="@+id/pspd_txt_getprice"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/ps_sel_color"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_title"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:background="@drawable/ps_red_button">

        </TextView>

    </LinearLayout>



</LinearLayout>
