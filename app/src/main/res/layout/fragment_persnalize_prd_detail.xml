<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/pspd_iv_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/back_arrow">

            </ImageView>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

            </View>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="8"
                android:src="@drawable/ps_title">

            </ImageView>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:scaleType="fitCenter">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.6"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/ps_title_line_blue" />

                <LinearLayout
                    android:id="@+id/ff_ll_thumbler"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/pspdf_iv_back"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/black_arrow_left"/>

                    <ImageView
                        android:id="@+id/pspd_iv_image"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ps_image"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/pspd_txt_category"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:text="@string/ps_prd_pitcher"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_title" />

                    <LinearLayout
                        android:id="@+id/ps_ll_colorpicker"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:layout_marginRight="5dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="right|center_vertical"
                            android:text="@string/ps_color"
                            android:textColor="@android:color/holo_red_light"
                            android:textSize="@dimen/font_textview2" />

                        <ImageView
                            android:id="@+id/psd_iv_color"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ps_color_circle"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/ps_title_line_gray" />

                <RelativeLayout
                    android:id="@+id/pst_ll_round"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="12">

                    <ImageView
                        android:id="@+id/pspd_iv_category"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:padding="@dimen/font_textview"
                        android:src="@drawable/ps_pitcher_table"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"></View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"></View>

                            <ImageView
                                android:id="@+id/psd_iv_logo"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@drawable/ps_line_circle"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"></View>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"></View>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"></View>

                        <TextView
                            android:id="@+id/ps_txt_addlogo"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/ps_add_logo"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="@dimen/font_title"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="@color/black"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"></View>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/font_image"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@string/size"
                            android:gravity="right|center_vertical"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_title"
                            android:paddingRight="@dimen/font_textview"/>

                        <com.cambro.app.utils.wheel.WheelView
                            android:id="@+id/fr_whl_fruit"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent"
                            android:gravity="left"/>

                        <View
                            android:id="@+id/fr_txt_fdone"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/pspd_txt_getprice"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="@string/ps_get_pricing"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_title"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:background="@drawable/ps_red_button">

                </TextView>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
