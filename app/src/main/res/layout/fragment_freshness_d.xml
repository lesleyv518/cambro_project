<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/frd_iv_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/font_textview"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/back_arrow">

        </ImageView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="10"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/freshness_title">

        </ImageView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

        </TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="@dimen/font_textview"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/frd_txt_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:paddingLeft="@dimen/font_textview"
                            android:text="AVOCATOS"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_medium"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="left"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/fr_txt_"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:scaleType="fitCenter"
                                android:src="@drawable/thermometer" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:gravity="left"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/font_textview">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif-condensed"
                                    android:gravity="left|bottom"
                                    android:text="@string/frs_txt_it"
                                    android:textColor="@android:color/holo_red_light"
                                    android:textSize="@dimen/font_textview"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/frd_txt_temp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:text="@string/frs_txt_degree"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/font_textview1"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed"
                                    android:gravity="left|bottom"
                                    android:text="@string/frs_txt_rh"
                                    android:textColor="@android:color/holo_red_light"
                                    android:textSize="@dimen/font_textview"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/frd_txt_humi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:text="35 - 45%"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/font_textview1"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/frd_iv_pi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/font_textview"
                        android:layout_weight="1.5"
                        android:src="@drawable/fresh_fv_apple" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/font_textview2"
                    android:background="@drawable/seperator_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/font_textview"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:text="@string/frs_txt_ssc"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="@dimen/font_textview1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3">

                        <ImageView
                            android:id="@+id/frd_iv_ssci"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:layout_margin="@dimen/font_textview"
                            android:background="@drawable/trans">

                        </ImageView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/font_textview"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/frd_txt_prdsubject"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="sans-serif-condensed"
                                android:gravity="left"
                                android:text="@string/frs_txt_sr"
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_textview2"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/frd_txt_ctd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="@string/frs_txt_sr"
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_textview2" />

                            <TextView
                                android:id="@+id/frd_txt_seemore"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_red"
                                android:fontFamily="sans-serif"
                                android:gravity="center"
                                android:text="@string/frs_txt_sm"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_textview2"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:visibility="visible">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/font_textview2"
                        android:layout_marginBottom="@dimen/font_textview"
                        android:background="@drawable/seperator_1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/font_textview"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:text="@string/frs_txt_st"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="@dimen/font_textview1" />

                        <TextView
                            android:id="@+id/frd_txt_tips"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:text="@string/frs_txt_safovb"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_textview1" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
